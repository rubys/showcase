<div class="mx-auto md:w-2/3 lg:w-1/2">

<%= render 'shared/root_info_box' %>

<%= render 'shared/environment_banner' %>

<span data-controller="event-navigation">
  <a rel="up" href="<%= @up || root_path %>"></a>
  <% if @prev %><a rel="prev" href="<%= @prev %>"></a><% end %>
  <% if @next %><a rel="next" href="<%= @next %>"></a><% end %>
</span>

  <h1 class="font-bold text-center text-4xl">Showcase Administration</h1>
  <%
    path = regions_path
    path = path[1..] if request.local?
    link = URI::join("#{Showcase.url}/", path).to_s
    link = root_path if Rails.env.development?
  %>
  <p class="text-center mt-2"><%= link_to pluralize(@cities, 'City'), link %> -
  <%= link_to pluralize(@events, 'Event'), inventory_path %></p>
  <div class="mt-8 grid grid-cols-3 gap-1">
    <%= link_to 'Users', users_path, class: "btn-green" %>
    <%= link_to "Regions", admin_regions_path, class: "btn-blue" %>
    <%= link_to "Studios", locations_path, class: "btn-green" %>

    <%= link_to 'Upload', upload_path, class: "btn-pale-blue" %>
    <%= link_to 'Import', import_event_index_path, class: "btn-pale-blue" %>
    <%= link_to 'Apply', admin_apply_path, class: "btn-orange" %>

    <div class="my-4"></div><div></div><div></div>

    <%= link_to "rubix", "https://rubix.intertwingly.net/showcase/", class: "btn-pale-green" %>
    <%= link_to "hetzner", "https://showcase.party/", class: "btn-pale-green" %>
    <%= link_to "fly", "#{Showcase.url}/regions/", class: "btn-pale-green" %>

    <%= link_to "Logs",  "https://rubix.intertwingly.net/scu", class: "btn-pale-orange" %>
    <%= link_to "Logs",  "https://logger.showcase.party/", class: "btn-pale-orange" %>
    <%= link_to "Logs",  "https://smooth-logger.fly.dev/", class: "btn-pale-orange" %>

    <div class="my-4"></div><div></div><div></div>

    <%= link_to "Sentry", "https://dance-showcase-fc53d34a.sentry.io/issues/?project=4505553528946688", class: "btn-grey", data: {controller: "sentry"} %>
    <%= link_to "Grafana", "https://fly-metrics.net/d/fly-app/fly-app?orgId=110534&var-app=smooth", class: "btn-pale-blue" %>
    <%= link_to "Dashboard", "https://fly.io/apps/smooth", class: "btn-grey" %>
  </div>

  <p class="mt-4 text-right">
  See:
  <%= link_to 'docs', docs_path %>,
  <a href="https://github.com/rubys/showcase#readme">code</a>,
  <a href="https://github.com/rubys/showcase/issues">issues</a>.
  </p>
</div>
