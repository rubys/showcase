<div class="w-full mx-12">

<%= render 'inventory_nav' %>

<h1 class="font-bold text-4xl mb-6">Judging Options Summary</h1>

<div class="space-y-8">
  <% # Open scoring %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="font-bold text-2xl mb-4">Open Scoring</h2>
    <ul class="space-y-2">
      <% @option_counts[:open_scoring].each do |value, data| %>
        <li class="flex items-center">
          <span class="text-gray-500 w-12 text-right mr-4"><%= data[:count] %></span>
          <% if data[:count] > 0 %>
            <%= link_to data[:label], inventory_path(open_scoring: value), 
                class: "text-blue-600 hover:underline", data: { turbo: false } %>
          <% else %>
            <span class="text-gray-600"><%= data[:label] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% # Closed scoring %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="font-bold text-2xl mb-4">Closed Scoring</h2>
    <ul class="space-y-2">
      <% @option_counts[:closed_scoring].each do |value, data| %>
        <li class="flex items-center">
          <span class="text-gray-500 w-12 text-right mr-4"><%= data[:count] %></span>
          <% if data[:count] > 0 %>
            <%= link_to data[:label], inventory_path(closed_scoring: value), 
                class: "text-blue-600 hover:underline", data: { turbo: false } %>
          <% else %>
            <span class="text-gray-600"><%= data[:label] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% # Solo scoring %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="font-bold text-2xl mb-4">Solo Scoring</h2>
    <ul class="space-y-2">
      <% @option_counts[:solo_scoring].each do |value, data| %>
        <li class="flex items-center">
          <span class="text-gray-500 w-12 text-right mr-4"><%= data[:count] %></span>
          <% if data[:count] > 0 %>
            <%= link_to data[:label], inventory_path(solo_scoring: value), 
                class: "text-blue-600 hover:underline", data: { turbo: false } %>
          <% else %>
            <span class="text-gray-600"><%= data[:label] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% # Multi scoring %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="font-bold text-2xl mb-4">Multi Scoring</h2>
    <ul class="space-y-2">
      <% @option_counts[:multi_scoring].each do |value, data| %>
        <li class="flex items-center">
          <span class="text-gray-500 w-12 text-right mr-4"><%= data[:count] %></span>
          <% if data[:count] > 0 %>
            <%= link_to data[:label], inventory_path(multi_scoring: value), 
                class: "text-blue-600 hover:underline", data: { turbo: false } %>
          <% else %>
            <span class="text-gray-600"><%= data[:label] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% # Boolean judging options %>
  <% option_labels = {
    judge_comments: 'Enable judge comments?',
    judge_recordings: 'Enable judge recordings? - Experimental',
    assign_judges: 'Assign judges couples to evaluate?'
  } %>
  
  <% option_labels.each do |option_name, label| %>
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="font-bold text-2xl mb-4"><%= label %></h2>
      <ul class="space-y-2">
        <% @option_counts[option_name].each do |value, data| %>
          <li class="flex items-center">
            <span class="text-gray-500 w-12 text-right mr-4"><%= data[:count] %></span>
            <% if data[:count] > 0 %>
              <%= link_to data[:label], inventory_path(option_name => value), 
                  class: "text-blue-600 hover:underline", data: { turbo: false } %>
            <% else %>
              <span class="text-gray-600"><%= data[:label] %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>

</div>