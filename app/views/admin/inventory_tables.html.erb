<div class="w-full mx-12">

<%= render 'inventory_nav' %>

<h1 class="font-bold text-4xl mb-6">Table Usage Summary</h1>

<div class="bg-white rounded-lg shadow p-6">
  <ul class="space-y-2">
    <% @tracked_tables.each do |table_name| %>
      <% table_data = @table_counts[table_name] %>
      <li class="flex items-center">
        <span class="text-gray-500 w-12 text-right mr-4"><%= table_data[:count] %></span>
        <% if table_data[:count] > 0 %>
          <%= link_to table_name, inventory_path("#{table_name}" => ">0"), 
              class: "text-blue-600 hover:underline", data: { turbo: false } %>
        <% else %>
          <span class="text-gray-600"><%= table_name %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

</div>