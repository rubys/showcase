<div id="<%= dom_id showcase %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= showcase.year %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Key:</strong>
    <%= showcase.key %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= showcase.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= showcase.location_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this showcase", showcase, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this showcase", edit_showcase_path(showcase), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
