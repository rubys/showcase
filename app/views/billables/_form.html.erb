<%= form_with(model: billable, class: "contents", id: 'billable-form', data: {controller: "couples"}) do |form| %>
  <% if billable.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(billable.errors.count, "error") %> prohibited this billable from being saved:</h2>

      <ul>
        <% billable.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @type == 'package' %>
  <div class="my-5">
    <%= form.label :type %>
    <%= form.select :type, %w(Student Professional Guest Judge DJ Emcee Official Organizer), {},
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% else %>
  <input type="hidden" name="billable[type]" value="Option">
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, required: true,
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.number_field :price, step: :any,
      value: number_to_currency(form.object.price.to_f, delimiter: '', unit: ''),
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if @type == 'package' %>
  <div class="my-5">
    <%= form.check_box :couples, class: 'entry-count h-10' %>
    <%= form.label :couples, 'Couples package?' %>
  </div>
  <% end %>

  <% if @type == 'package' and not @options.empty? %>
  <h2 class="font-bold text-2xl mt-4">Options included in package:</h1>
  <ul class="mb-8">
  <% @options.each do |option, checked| %>
  <li>
    <%= form.check_box "options][#{option.id}", class: "entry-count h-10", checked: checked %>
    <%= option.name %>
  </li>
  <% end %>
  </ul>
  <% elsif @type == 'option' and not @packages.empty? %>
    <h2 class="font-bold text-2xl mt-4">Option is included by the following packages:</h1>
  <ul class="mb-8">
  <% @packages.each do |package, checked| %>
  <li>
    <%= form.check_box "packages][#{package.id}", class: "entry-count h-10", checked: checked %>
    <%= link_to "#{package.type}: #{package.name}", edit_billable_path(package) %>
  </li>
  <% end %>
  </ul>
  <% end %>

  <% if @type == 'option' %>
  <div class="my-5" data-controller="questions">
    <h2 class="font-bold text-2xl mt-4">Questions for this option:</h2>
    <div id="questions-container" class="space-y-4 mt-4">
      <%= form.fields_for :questions do |question_form| %>
        <div class="question-fields border border-gray-300 p-4 rounded-md" data-questions-target="question">
          <%= question_form.hidden_field :id %>

          <div class="flex gap-4 items-start">
            <div class="flex-1">
              <%= question_form.label :question_text, "Question" %>
              <%= question_form.text_area :question_text, rows: 2,
                class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
            </div>

            <div class="w-48">
              <%= question_form.label :question_type, "Type" %>
              <%= question_form.select :question_type, [['Radio Buttons', 'radio'], ['Text Area', 'textarea']], {},
                { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
                  data: { action: "change->questions#toggleChoices" } } %>
            </div>
          </div>

          <div class="choices-container mt-3" data-questions-target="choicesContainer"
               style="<%= question_form.object.question_type == 'textarea' ? 'display: none;' : '' %>">
            <%= question_form.label :choices, "Choices (one per line)" %>
            <%= question_form.text_area :choices,
              value: (question_form.object.choices || []).join("\n"),
              rows: 3,
              placeholder: "Beef\nChicken\nFish\nVegetarian",
              class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
          </div>

          <%= question_form.hidden_field :order %>

          <div class="mt-3">
            <%= link_to "Remove Question", "#",
              class: "text-red-600 hover:text-red-800",
              data: { action: "click->questions#removeQuestion" } %>
            <% if question_form.object.persisted? %>
              <%= question_form.check_box :_destroy, class: "hidden", data: { questions_target: "destroyField" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-4">
      <%= link_to "Add Question", "#",
        class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700",
        data: { action: "click->questions#addQuestion" } %>
    </div>
  </div>
  <% end %>
<% end %>
